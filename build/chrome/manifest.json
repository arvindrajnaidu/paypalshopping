{
    "name": "PayPal Shopping",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "PayPal Shopping",
    "icons": {
        "16": "icons/icon-16.png",
        "128": "icons/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/livereload.js",
            "scripts/background.js"
        ]
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "options_ui": {
        "page": "options.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "scripts/alerty.js",
                "scripts/contentscript.js"
            ],
            "css": [
                "styles/alerty.css",
                "styles/animate.min.css"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "browser_action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "128": "icons/icon-128.png"
        },
        "default_title": "PayPal Shopping",
        "default_popup": "xo.html"
    }
}